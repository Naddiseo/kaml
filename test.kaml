-def element tag #id .classes [attrs] needsClosing = false body {
	'<$tag '
	-set attrs['id'] = id
	-set attrs['class'] += ' ' + classes
	['$k="{escape(v)}"' for k, v in attrs]
	'>$body</$tag>'
}

-def div (args) {
	element 'div' (args);
}

-def alert *args {
	div(class = ['alert', type]) {
		img "images/${type}.jpg";
		h4 title;
		text body;
	}
}

-def foo(f) {
	f {
		{alert}
	}
}

